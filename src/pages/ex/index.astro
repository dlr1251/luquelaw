import LayoutBlog from "../../layouts/LayoutBlog.astro";
const services = [
  {
    title: 'Visas',
    description: 'Get your Colombian visa',
    url: '/ex/services/visas'
  },
  {
    title: 'Immigration services',
    description: 'Have you been subject to a sanction?',
    url: '/ex/services/immigration'
  },
  {
    title: 'Legal Advice',
    description: 'Protect your rights',
    url: '/ex/services/legal-advice'
