---
<style>
    .prose {
				max-width: 100%!important;
    }
</style>
<LayoutBlog>
    
  <div class="hero h-screen md:h-80 bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Expats</h1>
        <p class="py-6">Get your visa, file your claim. All bilingual</p>
      </div>
    </div>
  </div>

    <div class="container mx-auto grid gap-2 grid-cols-1 sm:grid-cols-2 md:grid-cols-4">

      {services.map((service, i) => (
          <>
            <a href={service.url} class="card w-96 sm:w-60 md:w-64 lg:w-80 my-3 mx-auto sm:my-4 bg-base-100 hover:bg-base-600 shadow-md hover:shadow-lg">
                <div class="card-body hover:outline-none">
                  <h2 class="card-title">
                    {service.title}
                  </h2>
                  <p>{service.description}</p>
                </div>
            </a>
          </>    
      ))}

    </div>

    
</LayoutBlog>
